---
interface Props {
  id: number;
  name: string;
  price: number;
}

const { name, price } = Astro.props;
---

<div class="border rounded-lg shadow-sm overflow-hidden">
  <div class="p-4 border-b">
    <h3 class="text-lg font-semibold">{name}</h3>
  </div>
  <div class="p-4">
    <p class="text-2xl font-semibold">${(price / 100).toFixed(2)}</p>
  </div>
  <div class="p-4 bg-gray-50">
    <button class="w-full py-2 px-4 bg-blue-600 text-white rounded hover:bg-blue-700 transition-colors">
      Add to Cart
    </button>
  </div>
</div>
